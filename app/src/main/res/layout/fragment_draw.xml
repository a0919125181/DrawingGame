<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Room.Drawing.DrawFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="#000000">

        <RelativeLayout
            android:id="@+id/relativeLayoutDraw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:background="#FAFAFA">

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutControl"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/imageViewPaint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/brush" />


        <ImageView
            android:id="@+id/imageViewErase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imageViewPaint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:srcCompat="@mipmap/eraser" />

        <ImageView
            android:id="@+id/imageViewClear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/imageViewErase"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:srcCompat="@mipmap/trash" />

    </RelativeLayout>


    <SeekBar
        android:id="@+id/seekBarBrush"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="-75dp"
        android:layout_marginRight="-75dp"
        android:max="99"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:progress="20"
        android:progressDrawable="@drawable/sb_bar"
        android:rotation="90"
        android:thumb="@drawable/sb_thumb" />


</RelativeLayout>