<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#426426"
    tools:context=".Lobby.BagFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/colorBackgroundWhite">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="背包"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="36sp"/>

                <ImageView
                    android:id="@+id/imageViewItem1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item1"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem1"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem1"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem1" />


                <ImageView
                    android:id="@+id/imageViewItem2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewItem1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item2"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem2"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem2"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem2" />

                <ImageView
                    android:id="@+id/imageViewItem3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewItem2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item3"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem3"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem3"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem3" />

                <ImageView
                    android:id="@+id/imageViewItem4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewItem3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item4"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem4"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem4"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem4" />

                <ImageView
                    android:id="@+id/imageViewItem5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewItem4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item5"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem5"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem5"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem5" />

                <ImageView
                    android:id="@+id/imageViewItem6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:background="#FF946A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewItem5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewItem6"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FA86AE"
                    android:gravity="center"
                    android:text="item6"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/imageViewItem6"
                    app:layout_constraintStart_toStartOf="@id/imageViewItem6"
                    app:layout_constraintTop_toBottomOf="@id/imageViewItem6" />


            </android.support.constraint.ConstraintLayout>


        </HorizontalScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>