<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobby.LobbyFragment">

    <RelativeLayout
        android:id="@+id/relativeLayoutLeft"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonMessage"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_above="@+id/buttonFriend"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/speech_bubble"
            tools:text="Message" />


        <Button
            android:id="@+id/buttonFriend"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_above="@+id/buttonBag"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/network"
            tools:text="Friend" />


        <Button
            android:id="@+id/buttonBag"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/backpack"
            tools:text="Bag" />


        <Button
            android:id="@+id/buttonInfo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/buttonBag"
            android:layout_marginTop="25dp"
            android:background="@mipmap/question"
            tools:text="Info" />

        <Button
            android:id="@+id/buttonSetting"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/buttonInfo"
            android:layout_marginTop="25dp"
            android:background="@mipmap/settings_gears"
            tools:text="Setting" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textViewTopMid"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="TopMid" />

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/textViewTopMid"
            android:layout_toRightOf="@+id/textViewTopMid"
            android:src="@mipmap/avatar"
            tools:text="Photo" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewPhoto"
            android:layout_toRightOf="@+id/imageViewPhoto"
            android:text="名字123"
            android:textSize="20sp"
            tools:text="Name" />

        <ProgressBar
            android:id="@+id/progressBarExp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/textViewLevel"
            android:layout_alignRight="@id/textViewLevel"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageViewPhoto"
            android:layout_toRightOf="@+id/imageViewPhoto" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/hexagon"
            android:gravity="center"
            android:text="66"
            tools:text="Level" />


        <ImageView
            android:id="@+id/imageViewCoin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/progressBarExp"
            android:layout_toEndOf="@+id/imageViewPhoto"
            android:layout_toRightOf="@+id/imageViewPhoto"
            app:srcCompat="@mipmap/coin" />

        <TextView
            android:id="@+id/textViewMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBarExp"
            android:layout_toEndOf="@+id/imageViewCoin"
            android:layout_toRightOf="@+id/imageViewCoin"
            android:gravity="bottom"
            android:text="12345"
            android:textSize="14sp"
            tools:text="Money" />

    </RelativeLayout>


    <Button
        android:id="@+id/buttonCreateRoom"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutTop"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/relativeLayoutLeft"
        android:layout_toRightOf="@+id/relativeLayoutLeft"
        android:text="新增房間" />

    <Button
        android:id="@+id/buttonEnterRoom"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutTop"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/buttonCreateRoom"
        android:layout_toRightOf="@+id/buttonCreateRoom"
        android:text="進入房間" />

    <FrameLayout
        android:id="@+id/frameLayoutSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_below="@+id/relativeLayoutTop"
        android:layout_toEndOf="@+id/relativeLayoutLeft"
        android:layout_toRightOf="@+id/relativeLayoutLeft">


    </FrameLayout>


</RelativeLayout>

