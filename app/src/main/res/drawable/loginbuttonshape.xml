<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="60dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#3590DE"
        android:startColor="#3DD0F5"
        android:endColor="#2858A6"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <stroke
        android:width="2dp"
        android:color="#C6D5E9"
        />

    <size
        android:width="100dp"
        android:height="50dp"
        />
</shape>